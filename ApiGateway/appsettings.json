{
  "ReverseProxy": {
    "Routes": {
      "iam": {
        "ClusterId": "iam-cluster",
        "Match": {
          "Path": "/iam/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/iam" }
        ]
      },
      "locals": {
        "ClusterId": "locals-cluster",
        "Match": {
          "Path": "/locals/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/locals" }
        ]
      },
      "booking": {
        "ClusterId": "booking-cluster",
        "Match": {
          "Path": "/booking/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/booking" }
        ]
      },
      "profiles": {
        "ClusterId": "profiles-cluster",
        "Match": {
          "Path": "/profiles/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/profiles" }
        ]
      },
      "notification": {
        "ClusterId": "notification-cluster",
        "Match": {
          "Path": "/notification/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/notification" }
        ]
      },
      "subscriptions": {
        "ClusterId": "subscriptions-cluster",
        "Match": {
          "Path": "/subscriptions/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/subscriptions" }
        ]
      },
      "communication": {
        "ClusterId": "communication-cluster",
        "Match": {
          "Path": "/api/communication/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/api/communication" }
        ]
      }
    },
    "Clusters": {
      "iam-cluster": {
        "Destinations": {
          "iam-service": {
            "Address": "http://iam-service:8001/"
          }
        }
      },
      "locals-cluster": {
        "Destinations": {
          "locals-service": {
            "Address": "http://locals-service:8002/"
          }
        }
      },
      "booking-cluster": {
        "Destinations": {
          "booking-service": {
              "Address": "http://booking-service:8003/"
          }
        }
      },
      "profiles-cluster": {
        "Destinations": {
          "profiles-service": {
            "Address": "http://profiles-service:8004/"
          }
        }
      },
      "notification-cluster": {
        "Destinations": {
          "notification-service": {
              "Address": "http://notification-service:8005/"
          }
        }
      },
      "subscriptions-cluster": {
        "Destinations": {
          "subscriptions-service": {
              "Address": "http://subscriptions-service:8006/"
          }
        }
      },
      "communication-cluster": {
        "Destinations": {
          "communication-service": {
              "Address": "http://communication-service:8007/"
          }
        },
        "HttpRequest": {
          "Version": "2.0"
        }
      }
    }
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*"
}
